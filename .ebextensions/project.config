files:
  "/etc/php.d/wordpress.ini" :
    mode: "000644"
    owner: root
    group: root
    content: |
      upload_max_filesize = 128M
      post_max_size = 64M

files:
  "/opt/elasticbeanstalk/hooks/appdeploy/post/99_wp_setup.sh":
    mode: "000755"
    owner: root 
    group: root 
    content: |
      #!/usr/bin/env bash
      su -s /bin/bash -c "cd /var/app/current ; echo \"ENVIRONMENT: $ENVIRONMENT\" ; if [ \"$ENVIRONMENT\" = \"staging\" ]; then ./vendor/bin/phing setup-staging ; else ./vendor/bin/phing setup; fi" webapp
container_commands:
  SetupWp:
    command: "/opt/elasticbeanstalk/hooks/appdeploy/post/99_wp_setup.sh"
    ignoreErrors: false
    leader_only: true
