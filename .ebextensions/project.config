files:
  "/etc/php.d/wordpress.ini" :
    mode: "000644"
    owner: root
    group: root
    content: |
      upload_max_filesize = 128M
      post_max_size = 64M

files:
  "/opt/elasticbeanstalk/hooks/appdeploy/post/99_wp_setup.sh":
    mode: "000755"
    owner: root 
    group: root 
    content: |
      #!/usr/bin/env bash
      USER=$(id -a)
      echo "USER: " . $USER
      PWD=$(pwd)
      echo "PWD: " . $PWD
      echo "ENVIRONMENT: $ENVIRONMENT"
      cd /var/app/current
      if [ "$ENVIRONMENT" = "staging" ]
        then
          su -s /bin/bash -c "./vendor/bin/phing setup-staging" webapp
        else
          su -s /bin/bash -c "./vendor/bin/phing setup" webapp
      fi

container_commands:
  SetupWp:
    command: "/opt/elasticbeanstalk/hooks/appdeploy/post/99_wp_setup.sh"
    ignoreErrors: false
    leader_only: true
