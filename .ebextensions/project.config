files:
  "/etc/php.d/wordpress.ini" :
    mode: "000644"
    owner: root
    group: root
    content: |
      upload_max_filesize = 128M
      post_max_size = 64M

files:
  "/opt/elasticbeanstalk/hooks/appdeploy/post/99_wp_setup.sh":
    mode: "000755"
    owner: root 
    group: root 
    content: |
      #!/usr/bin/env bash
      env
      su -m webapp -s /bin/bash -c "id; PATH=/usr/local/bin:/bin:/usr/bin:/usr/local/sbin:/usr/sbin:/sbin:/opt/aws/bin:/home/ec2-user/.local/bin:/home/ec2-user/bin ; /usr/bin/php -v ; cd /var/app/current ; ls -l ; ls -l vendor/bin/* ; echo \"ENVIRONMENT: $ENVIRONMENT\" ; if [ \"$ENVIRONMENT\" = \"staging\" ]; then echo "Staging" ; ./vendor/bin/phing setup-staging ; else echo "Production" ; ./vendor/bin/phing setup; fi"
container_commands:
  SetupWp:
    command: "/opt/elasticbeanstalk/hooks/appdeploy/post/99_wp_setup.sh"
    ignoreErrors: false
    leader_only: true
